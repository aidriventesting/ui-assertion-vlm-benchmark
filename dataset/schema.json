{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/ui-assertion-vlm-benchmark/test-case.schema.json",
  "title": "UI Assertion Test Case",
  "description": "Schema for VLM benchmark test cases with structured tags and cognitive levels",
  "type": "object",
  "required": [
    "screenshot_id",
    "assertion_id",
    "assertion_text",
    "assertion_type",
    "cognitive_level",
    "gt_label"
  ],
  "properties": {
    "screenshot_id": {
      "type": "string",
      "description": "Filename of the screenshot image",
      "pattern": "^[a-zA-Z0-9_-]+\\.(png|jpg|jpeg|webp)$"
    },
    "assertion_id": {
      "type": "string",
      "description": "Unique identifier for this assertion",
      "pattern": "^t[0-9]+$"
    },
    "assertion_text": {
      "type": "string",
      "description": "The assertion statement to verify",
      "minLength": 10
    },
    "assertion_type": {
      "type": "string",
      "description": "Category of what is being verified",
      "enum": [
        "presence",
        "absence",
        "count",
        "exact_text",
        "semantic_text",
        "order",
        "layout_relation",
        "state",
        "consistency",
        "a11y_visual"
      ]
    },
    "cognitive_level": {
      "type": "string",
      "description": "Complexity level of reasoning required",
      "enum": ["L1", "L2", "L3"]
    },
    "tags": {
      "type": "object",
      "description": "Structured tags for difficulty and severity",
      "properties": {
        "difficulty_drivers": {
          "type": "array",
          "description": "Factors that make this assertion challenging",
          "items": {
            "type": "string",
            "enum": [
              "near_miss",
              "small_text",
              "occluded",
              "partial_visibility",
              "low_contrast",
              "busy_screen",
              "confusable_icons",
              "dynamic_content",
              "localization",
              "scroll_required"
            ]
          },
          "uniqueItems": true
        },
        "severity": {
          "type": "string",
          "description": "Business impact level",
          "enum": ["low", "med", "high"]
        }
      },
      "required": ["severity"]
    },
    "gt_label": {
      "type": "string",
      "description": "Ground truth label",
      "enum": ["PASS", "FAIL", "AMBIG"]
    },
    "notes": {
      "type": "string",
      "description": "Optional notes explaining the test case, especially for AMBIG cases"
    },
    "regions": {
      "type": "array",
      "description": "Optional bounding boxes for grounded evaluation",
      "items": {
        "type": "object",
        "required": ["id", "bbox"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Region identifier"
          },
          "bbox": {
            "type": "array",
            "description": "Bounding box [x, y, width, height] in pixels",
            "items": { "type": "number" },
            "minItems": 4,
            "maxItems": 4
          },
          "label": {
            "type": "string",
            "description": "Optional label for the region"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
